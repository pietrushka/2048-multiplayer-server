{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "pnpm buildUtils && tsup src/index.ts --tsconfig ./tsconfig.build.json",
    "start": "node dist/src/index",
    "dev": "pnpm buildUtils && tsx --watch ./src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "test": "pnpm jest",
    "buildUtils": "pnpm --filter shared-logic build"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "shared-logic": "workspace:^",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "tsx": "^4.7.1"
  }
}